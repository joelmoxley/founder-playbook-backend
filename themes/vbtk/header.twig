<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="utf-8" />

    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}">
    {% endif %}{% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}">
    {% endif %}

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/build/css/style.css" type="text/css" />

    <script src="{{ theme_url }}/build/js/scripts.js"></script>
</head>
<body>

    <header class="row" id="header">
        <div class="column">
            <h1><a href="{{ "index"|link }}" id="logo">{{ site_title }}</a></h1>
        </div>
    </header>

    <nav class="row">
        <div class="column">
            <select>
                    <option value="/">Select a Playbook</option>
                {% for page in pages|sort_by(['meta', 'playbook']) if page.title and page.meta.playbook %}
                    <option value="/{{ page.id|replace({'index': ''}) }}"{% if page.id|replace({'/index': ''}) in current_page.id %} selected{% endif %}>
                        {{ page.title }}
                    </option>
                {% endfor %}
            </select>
        </div>
    </nav>