{% extends "_layout.twig" %}

{% block content %}
  <div class="column">
    <h1>{{results|length}} results for "{{query}}"</h1>
    <ul class="search-results">
    {% for result in results %}
      <li>

      <a href="{{ result.url }}">
        {{ result.name }}
        <div>
          {% if result.url starts with 'http' %}
            {{ result.url }}
          {% else %}
            {{ result.url|replace({
              '-': ' ',
              '/': ' / '
            })|title }}
          {% endif %}
        </div>
      </a>
      </li>
    {% endfor %}
    </ul>
  </div>
{% endblock %}